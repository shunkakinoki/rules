{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "XcodeBuildMCP": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "xcodebuildmcp@latest"
      ]
    },
    "Serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uv",
        "run",
        "serena",
        "mcp"
      ]
    },
    "Linear": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ]
    },
    "GitHub": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://api.githubcopilot.com/mcp/"
      ]
    },
    "figma-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "http://127.0.0.1:3845/sse"
      ]
    },
    "beeper": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "http://localhost:23373/v0/mcp"
      ]
    }
  }
}
