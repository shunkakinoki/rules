{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "XcodeBuildMCP": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "xcodebuildmcp@latest"]
    },
    "Serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    },
    "Linear": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"]
    },
    "GitHub": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://api.githubcopilot.com/mcp/"
      ]
    },
    "Figma": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "mcp-remote", "http://127.0.0.1:3845/sse"]
    },
    "Beeper": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "mcp-remote", "http://localhost:23373/v0/mcp"]
    },
    "Codex": {
      "type": "local",
      "enabled": true,
      "command": ["codex", "mcp"]
    },
    "ChromeDevtools": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "chrome-devtools-mcp@latest"]
    },
    "Context7": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"]
    }
  }
}
